<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyl.flowershop.dao.IFlowerTypeDao">
	<select id="findAll" resultType="FlowerType">
		select tid,tname,typeImg,status from tb_type;
	</select>
	<insert id="insert" parameterType="FlowerType">
		insert into tb_type(`tname`,`typeImg`,`status`) values(#{tname},#{typeImg},1);
	</insert>
	<update id="update" parameterType="FlowerType">
		update tb_type
		<set>
			<if test="tname !=null and tname !='' ">
				tname=#{tname},
			</if>
			<if test="typeImg !=null and typeImg !='' ">
				typeImg=#{typeImg},
			</if>
			<if test="status !=null and status !='' ">
				status=#{status},
			</if>
		</set>
		where `tid`=  #{tid};
	</update>
</mapper>