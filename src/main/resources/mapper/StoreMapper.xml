<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyl.flowershop.dao.StoreDao">
	<select id="findAll" resultType="Store">
		select
		sid,color,size,img,num,fid,status from tb_store;
	</select>
	<select id="find" resultType="Store">
		select
		sid,color,size,img,num,fid,status from tb_store where fid=#{fid};
	</select>
	<insert id="insert" parameterType="Store">
		insert into
		tb_store(`color`,`size`,`img`,`num`,`fid`,`status`)
		values(#{color},#{size},#{img},#{num},#{fid},1);
	</insert>
	<update id="update" parameterType="Store">
		update tb_store
		<set>
			<if test="color !=null and color !='' ">
				color=#{color},
			</if>
			<if test="size !=null and size !='' ">
				size=#{size},
			</if>
			<if test="img !=null and img !='' ">
				img=#{img},
			</if>
			<if test="num !=null and num !='' ">
				num=#{num},
			</if>
			<if test="status !=null and status !='' ">
				status=#{status},
			</if>
		</set>
		where sid=#{sid};
	</update>

</mapper>